@model LAB3_WEBAPP.Models.Author
@{
    Layout = "AdminLayout";
    ViewBag.Title = "Chỉnh sửa danh mục";
}

<h2 class="mb-4">Edit</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AuthorId" />

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Avatar" class="form-label">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="~/images/@Model.Avatar" alt="Avatar" style="height: 80px;" />
        }
        else
        {
            <span class="text-muted">No Image</span>
        }
    </div>

    <div class="form-group mb-3">
        <label asp-for="Avatar" class="control-label"></label>
        <input asp-for="Avatar" class="form-control" placeholder="Filling file path (VD: images/author1.jpg)" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Activate Author</label>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}