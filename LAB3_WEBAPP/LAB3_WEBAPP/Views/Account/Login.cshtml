@{
    Layout = "AccountLayout";
}

<div class="container d-flex justify-content-center" style="max-height:100vh">
    <div class="card shadow-lg" style="width: 400px; padding: 20px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4" style="font-weight: bold">Đăng Nhập</h3>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Username" required />
                </div>
                <div class="form-group mb-3">
                    <label for="password">Mật khẩu</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <input type="checkbox" id="rememberMe" name="rememberMe" />
                        <label for="rememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <a href="#">Quên mật khẩu?</a>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng Nhập</button>
            </form>
            <div class="text-center mt-3">
                <span>Chưa có tài khoản? <a href="/Account/Register">Đăng ký ngay</a></span>
            </div>
        </div>
    </div>
</div>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">@error.ErrorMessage</div>
}
