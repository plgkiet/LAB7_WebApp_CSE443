@model LAB3_WEBAPP.Models.Loan

@{
    Layout = "AdminLayout";
}

<h2>Confirm deletion</h2>

<div>
    <h4>Loan ID: @Model.LoanId</h4>
    <p>
        Are you sure you want to delete this loan record?
    </p>
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.Fullname</dd>

        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Book?.Title</dd>

        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@Model.LoanDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">
            @(Model.DueDate.HasValue ? Model.DueDate.Value.ToString("dd/MM/yyyy") : "")
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LoanId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>