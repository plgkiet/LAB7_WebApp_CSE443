@* File: Views/Shared/AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Thư viện số - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>

<header class="bg-light border-bottom mb-3">
    <div class="container-fluid d-flex justify-content-between align-items-center p-3">
        <img src="~/images/logo.png" alt="Logo" style="height: 50px;" />
        <input type="text" class="form-control w-25" placeholder="Tìm kiếm..." />
        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn btn-success me-2">Đăng nhập</a>
                <a href="@Url.Action("Register", "Account")" class="btn btn-outline-primary">Đăng ký</a>
            }
        </div>
    </div>
    <nav style="background-color: #5D8044;">
        <ul class="nav justify-content-center py-2">
            @* <li class="nav-item mt-1"> *@
            @*     <select class="form-select form-select-sm ms-3 text-white" style="width: 160px; background-color: #5D8044; border: none;"> *@
            @*         <option selected>Danh mục sách</option> *@
            @*         <option value="vanhoc">Văn học</option> *@
            @*         <option value="khoahoc">Khoa học</option> *@
            @*         <option value="thieunhi">Thiếu nhi</option> *@
            @*         <option value="ngoaingu">Ngoại ngữ</option> *@
            @*     </select> *@
            @* </li> *@
            <li class="nav-item"><a class="nav-link text-white" href="/">Homepage</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                </li>
            }
            @* <li class="nav-item"><a class="nav-link text-white" href="/Admin/Index">Admin</a></li> *@
            <li class="nav-item"><a class="nav-link text-white" href="/Book/SelfHelpBooks">Self-help</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Book/LiteratureBooks">Literature</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Book/TravelBooks">Travel</a></li>
            @* <li class="nav-item"><a class="nav-link text-white" href="#">Tài liệu số</a></li> *@
            @* <li class="nav-item"><a class="nav-link text-white" href="#">Hóa đơn điện tử</a></li> *@
            @* <li class="nav-item"><a class="nav-link text-white" href="#">Sách</a></li> *@
            @* <li class="nav-item"><a class="nav-link text-white" href="#">Giới thiệu</a></li> *@
            @* <li class="nav-item"><a class="nav-link text-white" href="#">Liên hệ</a></li> *@
        </ul>
    </nav>
</header>

<main class="container-fluid">
    <div class="row" style="min-height: 90vh;">
        <aside class="col-md-2 bg-white border-end shadow-sm p-3">
            <h5 class="text-primary fw-bold mb-4">Admin Menu</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="/Admin/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Category/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-tags me-2"></i> Categories
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Author/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-person me-2"></i> Authors
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Book/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-book me-2"></i> Books
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/BooksView/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-book me-2"></i> Books API
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/User/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-people me-2"></i> Users
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/UsersView/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-people me-2"></i> Users API
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Loan/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-calendar-check me-2"></i> Loans
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a href="/Carousel/Index" class="nav-link text-dark d-flex align-items-center">
                        <i class="bi bi-images me-2"></i> Carousels
                    </a>
                </li>
            </ul>
        </aside>
        <section class="col-md-10 p-5 bg-light">
            @RenderBody()
        </section>
    </div>
</main>

<footer class="bg-dark text-white text-center py-4">
    <p>Phạm Lê Gia Kiệt - CSE443 &copy; @DateTime.Now.Year</p>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
