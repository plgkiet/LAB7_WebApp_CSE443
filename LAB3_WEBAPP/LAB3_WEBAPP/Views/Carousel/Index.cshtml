@model List<LAB3_WEBAPP.Models.Carousel>
@{
    Layout = "AdminLayout";
}

<h2 class="mb-4">Danh sách Carousel</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
    <tr>
        <th>#</th>
        <th>Hình ảnh</th>
        <th>Đường dẫn (ImageURL)</th>
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        var carousel = Model[i];
        <tr>
            <td>@(i + 1)</td>
            <td>
                <img src="~/images/@carousel.ImageURL" style="width: 150px; height: auto;" />
            </td>
            <td>@carousel.ImageURL</td>
        </tr>
    }
    </tbody>
</table>
